<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('User Name') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.vesync_power_monitor.username">
        </div>
        <label class="control-label">{{ _('Password') }}</label>
        <div class="controls">
            <input type="password" class="input-block-level" data-bind="value: settings.plugins.vesync_power_monitor.password">
        </div>
        <label class="control-label">{{ _('Device Name') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.vesync_power_monitor.device_name">
        </div>
        <label class="control-label">{{ _('Displayed Statistic') }}</label>
        <div class="controls">
            <select name="statistic" data-bind="value: settings.plugins.vesync_power_monitor.displayed_statistic">
                <option value="kWh_now">kWh</option>
                <option value="kWh_today">kWh Today</option>
                <option value="voltage">Voltage</option>
            </select>
        </div>
        <label class="control-label">{{ _('Update Interval (s)') }}</label>
        <div class="controls">
            <input type="number" class="input-block-level" data-bind="value: settings.plugins.vesync_power_monitor.update_interval">
        </div>
    </div>
</form>
